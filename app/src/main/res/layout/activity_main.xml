<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kkiruru.dataodometer.MainActivity">

    <FrameLayout
        android:id="@+id/data_odometer"
        android:layout_width="match_parent"
        android:layout_height="92dp">
        <com.kkiruru.dataodometer.Odometer
            android:id="@+id/odometer"
            android:layout_width="match_parent"
            android:layout_height="92dp" />
    </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="증가" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/incease_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onIncrese"
            android:text="1" />

        <Button
            android:id="@+id/incease_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onIncrese"
            android:text="7" />

        <Button
            android:id="@+id/incease_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onIncrese"
            android:text="13" />
        <Button
            android:id="@+id/incease_67"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onIncrese"
            android:text="63" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="감소" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/decease_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onDecrese"
            android:text="1" />

        <Button
            android:id="@+id/decease_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onDecrese"
            android:text="7" />

        <Button
            android:id="@+id/decease_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onDecrese"
            android:text="13" />

        <Button
            android:id="@+id/decease_67"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onDecrese"
            android:text="67" />

    </LinearLayout>

    <Button
        android:id="@+id/initialize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onInitialize"
        android:text="초기화" />

</LinearLayout>
